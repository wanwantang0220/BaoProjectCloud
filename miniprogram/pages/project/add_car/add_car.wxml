<view class='contain'>

  <form bindreset="formReset">
    <view class='view_input'>
      <view>name </view>
      <input class='input' placeholder='内容' bindinput='bindNameInput' value='{{name}}'></input>
    </view>

    <view class='view_input'>
      <view>type </view>
      <input class='input' placeholder='内容' bindinput='bindTypeInput' value='{{mtype}}'></input>
    </view>

    <view class='view_input'>
      <view>desc </view>
      <input class='input' placeholder='内容' bindinput='bindDescInput' value='{{desc}}'></input>
    </view>

    <button bindtap="commit" formType="submit">提交 </button>
  </form>
</view>