/* miniprogram/pages/project/controller/controller.wxss */

.contain {
  width: 750rpx;
  background: #fff;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  animation: headRotate 10s linear infinite;
}
/* 头像旋转效果  */
@keyframes headRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}

.view_input {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  height: 52px;
  line-height: 52px;
  font-size: 34rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.input {
  margin-left: 20rpx;
  align-items: center;
  height: 52px;
  line-height: 52px;
}
.img_wrap {
    margin-bottom: 10px;
    width: 750rpx;
    height: 468rpx;
    background: #ececec;
}

image {
    width: 100%;
    height: 100%;
}

.msg {
